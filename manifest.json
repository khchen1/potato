{
  "manifest_version": 2,

  "name": "Pomodoro Bad-Ass-Ness",
  "description": "Keeps you on track and on your toes.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "potato.png",
    "default_popup": "popup.html"
  },
  "background": {
	"scripts": ["popups.js"],
    "persistent": false
  },
  "permissions": [
	"activeTab"
  ]
}
